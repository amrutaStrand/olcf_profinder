<UserControl 
    x:Class="Agilent.OpenLab.FeatureExtractionUI.FeatureExtractionUIView" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="Auto" 
    Width="Auto" 
    Margin="0" 
    Focusable="True"
    Loaded="OnLoaded" 
    Unloaded="OnUnloaded">
    <Grid>
        <StackPanel>
            <Button HorizontalAlignment="Center" Height="30" Command="{Binding RunMFECommand.Command}">
                Run MFE
            </Button>

            <StackPanel Orientation="Horizontal">
                <Label  Content="Charge States" Margin="10"/>
                <TextBox x:Name="ChargeStates" Height="30" Width="60" Margin="10" Text="{Binding Path=CombinedChargeState, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label  Content="Isotope Model" Margin="10"/>
                <ComboBox SelectedIndex="{Binding IsotopeTypeInd}" DisplayMemberPath="DisplayText" ItemsSource="{Binding IsotopeModels}" Height="30" Width="161" Margin="10" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label  Content="RT Tolerance(mins)" Margin="10"/>
                <TextBox x:Name="RTMinutes" Height="30" Width="60" Margin="10"
                         Text="{Binding Path=AlignmentInfoPSet.RTMinutes, Mode=TwoWay}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Mass Tolerance(ppm)" Margin="10"/>
                <TextBox x:Name="MassWindowPpm" Height="30" Width="60" Margin="10"
                     Text="{Binding Path=AlignmentInfoPSet.MassWindowPpm, Mode=TwoWay}"/>
            </StackPanel>
            <!--<StackPanel Orientation="Horizontal">
                <Label  Content="RT Range(mins)" Margin="10"/>
                <TextBox x:Name="RTRange" Height="30" Width="60" Margin="10"
                     Text="{Binding Path=RTRange, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label  Content="m/z" Margin="10"/>
                <TextBox x:Name="MZRange" Height="30" Width="60" Margin="10"
                     Text="{Binding Path=MZRange, Mode=TwoWay}"/>
            </StackPanel>-->
        </StackPanel>
    </Grid>
</UserControl>