<UserControl 
    x:Class="Agilent.OpenLab.CompoundGroupsTable.CompoundGroupsTableView" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:igWPF="http://schemas.infragistics.com/xaml/wpf"
    xmlns:igDP="http://infragistics.com/DataPresenter"
    Height="Auto" 
    Width="Auto" 
    Margin="0" 
    Focusable="True"
    Loaded="OnLoaded" 
    Unloaded="OnUnloaded">
    <Grid>
        <igDP:XamDataGrid DataSource="{Binding CompoundGroups}" SelectedDataItems="{Binding SelectedCompoundGroups, Mode=TwoWay}" ActiveDataItem="{Binding FocusedCompoundGroup}" >
            <igDP:XamDataGrid.FieldSettings>
                <igDP:FieldSettings CellClickAction="SelectRecord"/>
            </igDP:XamDataGrid.FieldSettings>
        </igDP:XamDataGrid>
        <!--<WindowsFormsHost Focusable="True" Name="GridControlHost" Panel.ZIndex="1">
            <WindowsFormsHost.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Export" />
                </ContextMenu>
            </WindowsFormsHost.ContextMenu>
        </WindowsFormsHost>-->
    </Grid>
</UserControl>