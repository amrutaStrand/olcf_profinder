                    <Style TargetType="{x:Type igDP:DataRecordCellArea}">
                        <Setter Property="Padding" Value="16, 0, 0,4"/>
                        <Setter Property="Height" Value="24"/>
                        <Setter Property="BorderBrush" Value="#c1c6c8"></Setter>
                        <Setter Property="CornerRadius" Value="0"/>
                        <Setter Property="BorderAlternateBrush" Value="#c1c6c8"></Setter>
                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#cce7f7" />
                                <Setter Property="BorderBrush" Value="#057fc8" />
                                <Setter Property="BorderThickness" Value="1px" />
                                <Setter Property="Foreground" Value="#384350" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
